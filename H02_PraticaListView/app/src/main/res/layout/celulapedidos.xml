<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/celulapedidos_tv_codigo_pedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="CÃ³digo do Pedido"
            android:textColor="#FF000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/celulapedidos_tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:text="status pedido" />


    </LinearLayout>

    <TextView
        android:id="@+id/celulapedidos_tv_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="nome do cliente" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/celulapedidos_tv_total_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="Total de Itens" />

        <TextView
            android:id="@+id/celulapedidos_tv_valor_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:text="Valor Total"
            android:textColor="#FFFF0000" />

    </LinearLayout>

</LinearLayout>